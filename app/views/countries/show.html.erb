<header class="app-bar promote-layer">
    <div class="app-bar-container">
        <button class="menu"><span class="icon-menu"></span></button>

        <div class="Heading">
            <%= link_to countries_path, class: "Back" do %>
                <span class="icon-chevron-left-thin"></span><span class="Back-text">Back</span>
            <% end %>
            <h1 class="title"><span>Country</span></h1>
        </div>

    </div>
</header>

<main>
    <div class="Form u-pushTopBottom clear">
        <div class="g--half">

            <h3 class="title">Country #<%= @country.id %></h3>

            <dl class="Info">
                <dt>Organization</dt>
                <dd>
                    <%= @country.organization.name %>
                    <% if can? :update, @country %>
                        <%= link_to 'Edit', edit_country_path(@country), class: "Info-more" %>
                    <% end %>
                </dd>

                <dt>Name</dt>
                <dd>
                    <%= @country.name.blank? ? "N/A" : @country.name %>
                </dd>

                <% if @country.user %>
                    <dt>Manager</dt>
                    <dd>
                        <%= link_to @country.user.username, user_path(@country.user) %>
                    </dd>
                <% end %>
            </dl>

            <h3 class="title u-push2xTop">Sites</h3>

            <dl class="Info">
                <% @country.sites.reverse.each do |site| %>
                    <dt>#<%= site.id %></dt>
                    <dd><a class="button--icontext button--ricontext" href="<%= site_path(site) %>" <%= link_to site.name %></a></dd>
                <% end %>
            </dl>

        </div>

        <div class="clear"></div>
    </div>
</main>
